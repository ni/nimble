---
import nimbleUiLogo from '../images/nimble-ui-logo.svg';
import blazor from '../images/blazor.svg';
import gh from '../images/gh.svg';
import ng from '../images/ng.svg';
import sb from '../images/sb.svg';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name="description" content="The Nimble design system starting page. The Nimble Design System is an easy to use collection of well-designed, styled components
    that can be used in any NI web application.">
    <title>Nimble Design System - NI</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="icon" href="favicon.ico" sizes="any">
    <script>
        import '../index.ts';
    </script>
    <style lang="scss">
        @import '../styles.scss';
    </style>
</head>

<body>
        <div class="container">
            <div class="main-content">
                <div class="banner">
                    <div class="banner-main">
                        <img src={nimbleUiLogo} width="326" height="97" alt="Nimble Logo">
                        <p>The Nimble Design System is an easy to use collection of well-designed, styled components
                            that can be used in any NI web application.</p>
                    </div>
                </div>
                 <div class="cards">
                   <div class="card-wrapper">
                       <a class="card" href="https://github.com/ni/nimble">
                            <div class="icon"><img src={gh} width="197" height="64" alt="GitHub Logo"></div>
                            <div class="name">GitHub</div>
                            <div class="description">Open source access to code snippets</div>
                       </a>
                   </div>
                     <div class="card-wrapper">
                         <a class="card" href="storybook/">
                            <div class="icon"><img src={sb} width="64" height="64" alt="Storybook Logo"></div>
                            <div class="name">Storybook</div>
                            <div class="description">Live playground for component APIs</div>
                         </a>
                     </div>
                    <div class="card-wrapper">
                        <a class="card" href="storybook/example-client-app">
                            <div class="icon"><img src={ng} width="64" height="64" alt="Angular Logo"></div>
                            <div class="name">Angular Demo</div>
                            <div class="description">View the Angular Demo Project</div>
                        </a>
                    </div>
                    <div class="card-wrapper">
                        <a class="card" href="storybook/blazor-client-app/wwwroot/">
                            <div class="icon"><img src={blazor} width="187" height="64" alt="Blazor Logo"></div>
                            <div class="name">Blazor Demo</div>
                            <div class="description">View the Blazor Demo Project</div>
                        </a>
                    </div>
                </div> 
            </div>
                <svg class="circle-wrapper" id="circles" viewBox="0 0 1550 1550" width="1300" height="1300"
                    stroke-width="50" fill="transparent" stroke-linecap="round">
                    <circle cx="775" cy="775" r="750" />
                    <circle cx="775" cy="775" r="700" />
                    <circle cx="775" cy="775" r="650" />
                    <circle cx="775" cy="775" r="600" />
                    <circle cx="775" cy="775" r="550" />
                    <circle cx="775" cy="775" r="500" />
                    <circle cx="775" cy="775" r="450" />
                </svg>
        </div>
</body>
</html>
