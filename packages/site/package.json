{
    "name": "@ni-private/site",
    "version": "1.0.0",
    "private": true,
    "description": "A meta package used for creating GitHub pages site contents",
    "scripts": {
        "build": "npm run create-link && astro build",
        "start": "npm run create-link && astro dev",
        "preview": "npm run build && astro preview",
        "pack": "npm pack",
        "lint": "eslint .",
        "create-link": "npm run create-link:storybook && npm run create-link:angular && npm run create-link:blazor",
        "create-link:storybook": "symlink-dir ../../packages/nimble-components/dist/storybook ./public/storybook",
        "create-link:angular": "symlink-dir ../../angular-workspace/dist/example-client-app ./public/storybook/example-client-app",
        "create-link:blazor": "symlink-dir ../../packages/nimble-blazor/dist/blazor-client-app ./public/storybook/blazor-client-app"
    },
    "dependencies": {
        "@ni/nimble-components": "*"
    },
    "devDependencies": {
        "@astrojs/mdx": "^0.19.7",
        "@ni/eslint-config-typescript": "^4.2.1",
        "astro": "^2.8.3",
        "sass": "^1.64.1",
        "symlink-dir": "^5.1.1"
    },
    "files": [
        "dist",
        "!*.tgz",
        "!dist/storybook/blazor-client-app"
    ]
}
