{
  "name": "@ni/xliff-to-json-converter",
  "version": "1.1.14",
  "description": "Utility to convert translation files from XLIFF to JSON for Angular localization",
  "scripts": {
    "build": "npm run compile",
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json -w",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "pack": "npm pack",
    "invoke-publish": "npm publish",
    "tdd": "npm run build && npm run test",
    "test": "jasmine"
  },
  "type": "module",
  "main": "dist/commonjs/cli.js",
  "bin": {
    "xliff-to-json-converter": "./dist/commonjs/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ni/nimble.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "National Instruments",
  "license": "MIT",
  "dependencies": {
    "xliff": "^6.1.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@ni-private/eslint-config-nimble": "*",
    "@types/jasmine": "^5.1.4",
    "@types/yargs": "^17.0.10",
    "jasmine": "^5.1.0",
    "jasmine-core": "^5.1.2",
    "typescript": "~5.8.3"
  }
}
