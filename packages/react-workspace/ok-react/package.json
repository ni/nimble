{
  "name": "@ni/ok-react",
  "version": "0.4.0",
  "description": "React components for NI Ok Components",
  "keywords": [
    "ni",
    "ok",
    "react"
  ],
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    "./*": {
      "types": "./dist/esm/*.d.ts",
      "import": "./dist/esm/*/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/esm/*/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "pack": "npm pack",
    "invoke-publish": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ni/nimble.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "National Instruments",
  "license": "MIT",
  "devDependencies": {
    "@ni/ok-components": "^0.1.23",
    "@ni-private/eslint-config-nimble": "*",
    "typescript": "~5.8.3"
  },
  "peerDependencies": {
    "@lit/react": "^1.0.8",
    "@ni/ok-components": "^0.1.23",
    "react": "^17 || ^18 || ^19"
  }
}
