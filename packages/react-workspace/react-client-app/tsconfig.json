{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "incremental": true,
  },
  "include": ["src"]
}
