<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <IncludeContentInPack>true</IncludeContentInPack>
    <Authors>NI</Authors>
    <RepositoryUrl>https://github.com/ni/nimble</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Description>Design tokens used within the Nimble Design System.</Description>
    <Copyright>Copyright 2021</Copyright>
    <PackageTags>Nimble NI tokens</PackageTags>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="../../dist/styledictionary/xaml/**/*.*" />
    <Content Include="../../dist/styledictionary/csharp/**/*.*" />
    <Content Include="../../dist-ico/**/*.*" />
  </ItemGroup>

  <ItemGroup>
    <None Include="License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
