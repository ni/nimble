{
  "name": "@ni/nimble-components",
  "version": "11.8.1",
  "description": "Styled web components for the NI Nimble Design System",
  "scripts": {
    "build": "npm run generate-icons && npm run build-components && npm run bundle-components && npm run generate-scss && npm run build-storybook",
    "lint": "npm run eslint && npm run prettier",
    "format": "npm run eslint-fix && npm run prettier-fix",
    "eslint": "eslint .",
    "eslint-fix": "eslint src --fix",
    "prettier": "prettier-eslint \"**/*.*\" --list-different --prettier-ignore",
    "prettier-fix": "prettier-eslint \"**/*.*\" --write --prettier-ignore",
    "pack": "npm pack",
    "invoke-publish": "npm publish",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o dist/storybook",
    "build-components": "tsc -p ./tsconfig.json",
    "build-components:watch": "tsc -p ./tsconfig.json -w",
    "bundle-components": "rollup --config",
    "generate-icons": "npm run generate-icons:bundle && npm run generate-icons:run",
    "generate-icons:bundle": "rollup --config build/generate-icons/rollup.config.js",
    "generate-icons:run": "node build/generate-icons/dist/index.js",
    "generate-scss": "npm run generate-scss:bundle && npm run generate-scss:run",
    "generate-scss:bundle": "rollup --config build/generate-scss/rollup.config.js",
    "generate-scss:run": "node build/generate-scss/dist/index.js",
    "chromatic": "chromatic",
    "tdd": "npm run build-components && npm run test-chrome",
    "tdd:watch": "npm run build-components:watch & npm run test-chrome:watch",
    "test-chrome:debugger": "karma start karma.conf.js --browsers=ChromeDebugging",
    "test-chrome:verbose": "karma start karma.conf.verbose.js --browsers=ChromeHeadlessOpt --single-run",
    "test-chrome:watch": "karma start karma.conf.js --browsers=ChromeHeadlessOpt --watch-extensions js",
    "test-chrome": "karma start karma.conf.js --browsers=ChromeHeadlessOpt --single-run",
    "test-firefox": "karma start karma.conf.js --browsers=FirefoxHeadless --single-run",
    "test": "npm run test-chrome:verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ni/nimble.git"
  },
  "author": {
    "name": "National Instruments"
  },
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/ni/nimble/issues"
  },
  "homepage": "https://github.com/ni/nimble#readme",
  "dependencies": {
    "@microsoft/fast-animation": "^4.2.2",
    "@microsoft/fast-element": "^1.10.1",
    "@microsoft/fast-foundation": "^2.46.11",
    "@microsoft/fast-web-utilities": "^5.4.1",
    "@ni/nimble-tokens": "^4.0.1",
    "hex-rgb": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.13.15",
    "@ni/eslint-config-javascript": "^3.1.0",
    "@ni/eslint-config-typescript": "^3.0.5",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@storybook/addon-a11y": "^6.4.9",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-docs": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-interactions": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/addons": "^6.4.9",
    "@storybook/builder-webpack5": "^6.4.9",
    "@storybook/html": "^6.4.9",
    "@storybook/manager-webpack5": "^6.4.9",
    "@storybook/theming": "^6.4.9",
    "@types/jasmine": "^3.6.0",
    "@types/webpack-env": "^1.15.2",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.9.2",
    "circular-dependency-plugin": "^5.2.0",
    "css-loader": "^6.2.0",
    "dotenv-webpack": "^7.0.2",
    "eslint-plugin-jsdoc": "^36.1.0",
    "eslint-plugin-storybook": "^0.5.1",
    "html-webpack-plugin": "^5.3.1",
    "jasmine-core": "^3.7.0",
    "karma": "^6.3.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "^4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-source-map-support": "^1.4.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^5.0.0",
    "prettier": "^2.0.0",
    "prettier-eslint": "^13.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "puppeteer": "^10.1.0",
    "rollup": "^2.61.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "storybook-addon-xd-designs": "^6.0.0",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.2",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-middleware": "^5.0.0"
  }
}
