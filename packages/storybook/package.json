{
  "name": "@ni-private/storybook",
  "version": "1.0.0",
  "private": true,
  "description": "Storybook for the Nimble repo",
  "scripts": {
    "build": "npm run build:ts && npm run build:sb",
    "build:ts": "tsc -b",
    "build:sb": "storybook build -o dist/storybook --webpack-stats-json",
    "start": "storybook dev --quiet -p 6006",
    "launch-webkit": "playwright wk http://localhost:6006",
    "lint": "eslint .",
    "format": "eslint . --fix"
  },
  "type": "module",
  "peerDependencies": {
    "@types/react": "^19",
    "apache-arrow": "21.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-storybook": "^10.1.10",
    "globals": "^14.0.0",
    "react": "^19"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@ni-private/eslint-config-nimble": "*",
    "@ni/fast-element": "^10.0.0",
    "@ni/fast-foundation": "^10.1.1",
    "@ni/fast-web-utilities": "^10.0.0",
    "@ni/nimble-components": "*",
    "@ni/nimble-react": "*",
    "@ni/nimble-tokens": "*",
    "@ni/ok-components": "*",
    "@ni/ok-react": "*",
    "@ni/spright-components": "*",
    "@ni/spright-react": "*",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-links": "^10.1.10",
    "@storybook/builder-vite": "^10.1.10",
    "@storybook/cli": "^10.1.10",
    "@storybook/html-vite": "^10.1.10",
    "@types/js-beautify": "^1.14.3",
    "js-beautify": "^1.15.1",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.0",
    "rollup": "^4.12.0",
    "storybook": "^10.1.10",
    "storybook-addon-pseudo-states": "^10.1.10",
    "typescript": "~5.8.3",
    "vite": "^7.0.0"
  }
}
