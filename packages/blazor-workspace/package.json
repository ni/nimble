{
	"name": "@ni-private/blazor-workspace",
	"version": "1.0.0",
	"private": true,
	"description": "Workspace for Blazor projects",
	"scripts": {
		"build": "npm run build:generate-icons && npm run build:release && npm run build:client",
		"build:generate-icons": "node build/generate-icons.mjs",
		"build:release": "dotnet build -c Release /p:TreatWarningsAsErrors=true /warnaserror",
		"build:client": "dotnet publish -p:BlazorEnableCompression=false -c Release Examples/Demo.Client --output dist/blazor-client-app",
		"pack": "npm run pack:nimble && npm run pack:spright && npm run pack:ok",
		"pack:nimble": "cd NimbleBlazor && npm run invoke-pack",
		"pack:spright": "cd SprightBlazor && npm run invoke-pack",
		"pack:ok": "cd OkBlazor && npm run invoke-pack",
		"lint": "npm run lint:cs && npm run lint:js",
		"lint:cs": "dotnet format --verify-no-changes",
		"lint:js": "eslint .",
		"format": "npm run format:cs && npm run format:js",
		"format:cs": "dotnet format",
		"format:js": "eslint . --fix",
		"test": "dotnet test -c Release",
		"copy-resources-nimble": "node build/copy-resources.mjs nimble",
		"copy-resources-spright": "node build/copy-resources.mjs spright",
		"copy-resources-ok": "node build/copy-resources.mjs ok",
		"update-lock-files": "dotnet restore --force-evaluate"
	},
	"type": "module",
	"files": [
		"!*"
	],
	"devDependencies": {
		"@ni/fast-web-utilities": "^10.0.0",
		"@ni-private/eslint-config-nimble": "*",
		"@ni/nimble-components": "*",
		"@ni/nimble-tokens": "*",
		"@ni/ok-components": "*",
		"@ni/spright-components": "*",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"cross-env": "^10.1.0",
		"glob": "^11.0.0",
		"playwright": "1.54.1",
		"rollup": "^4.12.0",
		"globals": "^14.0.0"
	}
}