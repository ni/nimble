@namespace NimbleBlazor
@inherits ListComponentBase<string>
<CascadingValue Value="_internalListContext" Name="ListContext" TValue="InternalListContext<string>" IsFixed="true">
    <nimble-select @onchange="@OnChangedHandlerAsync"
        disabled="@Disabled"
        position="@Position.ToAttributeValue()"
        appearance="@Appearance.ToAttributeValue()"
        filter-mode="@FilterMode.ToAttributeValue()"
        clearable="@Clearable"
        error-text="@ErrorText"
        error-visible="@ErrorVisible"
        required-visible="@RequiredVisible"
        appearance-readonly="@AppearanceReadOnly"
        full-bleed="@FullBleed"
        @attributes="AdditionalAttributes">
        @GetListOptions(null)
    </nimble-select>
</CascadingValue>
