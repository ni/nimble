@namespace NimbleBlazor
@inherits NimbleFractionalTableColumn

<nimble-table-column-menu-button
    column-id="@ColumnId"
    field-name="@FieldName"
    menu-slot="@MenuSlot"
    action-menu-slot="@ActionMenuSlot"
    action-menu-label="@ActionMenuLabel"
    column-hidden="@ColumnHidden"
    fractional-width="@FractionalWidthAsString"
    min-pixel-width="@MinPixelWidthAsString"
    @onnimbletablecolumnmenubuttontoggle="(__value) => HandleMenuButtonColumnToggle(__value)"
    @onnimbletablecolumnmenubuttonbeforetoggle="(__value) => HandleMenuButtonColumnBeforeToggle(__value)"
    @attributes="AdditionalAttributes"
>
    @ChildContent
</nimble-table-column-menu-button>

