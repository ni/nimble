{
  "name": "@ni/nimble-react",
  "version": "0.0.1",
  "description": "Experimental React components for the NI Nimble Design System",
  "scripts": {
    "build": "npm run generate-icons && tsc -p ./tsconfig.json",
    "generate-icons": "npm run generate-icons:bundle && npm run generate-icons:run",
    "generate-icons:bundle": "rollup --bundleConfigAsCjs --config build/generate-icons/rollup.config.js",
    "generate-icons:run": "node build/generate-icons/dist/index.js",
    "invoke-publish": "npm run invoke-publish:setup && cd ../dist/nimble-react && npm publish",
    "invoke-publish:setup": "cd ../ && npm run build:nimble",
    "start": "storybook dev --quiet -p 6006",
    "lint": "npm run eslint && npm run prettier",
    "format": "npm run prettier-fix",
    "eslint": "eslint .",
    "eslint-fix": "eslint . --fix",
    "prettier": "prettier-eslint \"**/*.*\" --list-different --prettier-ignore",
    "prettier-fix": "prettier-eslint \"**/*.*\" --write --prettier-ignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ni/nimble.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "National Instruments"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ni/nimble/issues"
  },
  "homepage": "https://github.com/ni/nimble#readme",
  "exports": {
  },
  "devDependencies": {
    "@ni-private/eslint-config-nimble": "*",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "rollup": "^4.12.0",
    "prettier-eslint": "^16.3.0",
    "prettier-eslint-cli": "^8.0.1",
    "typescript": "~5.4.5"
  },
  "peerDependencies": {
    "react": "^18.3.1"
  },
  "dependencies": {
    "@microsoft/fast-react-wrapper": "^0.3.24",
    "@ni/nimble-components": "*"
  }
}
