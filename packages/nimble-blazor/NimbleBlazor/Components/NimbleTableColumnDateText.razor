@namespace NimbleBlazor
@inherits NimbleTableColumn

<nimble-table-column-date-text
    column-id="@ColumnId"
    field-name="@FieldName"
    placeholder="@Placeholder"
    action-menu-slot="@ActionMenuSlot"
    action-menu-label="@ActionMenuLabel"
    column-hidden="@ColumnHidden"
    fractional-width="@FractionalWidth"
    min-pixel-width="@MinPixelWidth"
    sort-direction="@SortDirection.ToAttributeValue()"
    sort-index="@SortIndex"
    group-index="@GroupIndex"
    grouping-disabled="@GroupingDisabled"
    format="@Format.ToAttributeValue()"
    custom-locale-matcher="@CustomLocaleMatcher.ToAttributeValue()"
    custom-weekday="@CustomWeekday.ToAttributeValue()"
    custom-era="@CustomEra.ToAttributeValue()"
    custom-year="@CustomYear.ToAttributeValue()"
    custom-month="@CustomMonth.ToAttributeValue()"
    custom-day="@CustomDay.ToAttributeValue()"
    custom-hour="@CustomHour.ToAttributeValue()"
    custom-minute="@CustomMinute.ToAttributeValue()"
    custom-second="@CustomSecond.ToAttributeValue()"
    custom-time-zone-name="@CustomTimeZoneName.ToAttributeValue()"
    custom-format-matcher="@CustomFormatMatcher.ToAttributeValue()"
    custom-hour12="@(CustomHour12.HasValue ? (CustomHour12.Value ? "true" : "false") : null)"
    custom-time-zone="@CustomTimeZone"
    custom-calendar="@CustomCalendar"
    custom-day-period="@CustomDayPeriod.ToAttributeValue()"
    custom-numbering-system="@CustomNumberingSystem"
    custom-date-style="@CustomDateStyle.ToAttributeValue()"
    custom-time-style="@CustomTimeStyle.ToAttributeValue()"
    custom-hour-cycle="@CustomHourCycle.ToAttributeValue()"
    @attributes="AdditionalAttributes"
>
    @ChildContent
</nimble-table-column-date-text>

