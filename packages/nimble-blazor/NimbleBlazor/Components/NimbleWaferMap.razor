@namespace NimbleBlazor
<nimble-wafer-map
    @ref="_waferMap"
    origin-location="@OriginLocation.ToAttributeValue()"
    grid-min-x="@GridMinX"
    grid-max-x="@GridMaxX"
    grid-min-y="@GridMinY"
    grid-max-y="@GridMaxY"
    orientation="@Orientation.ToAttributeValue()"
    max-characters="@MaxCharacters"
    die-labels-hidden="@DieLabelsHidden"
    die-labels-suffix="@DieLabelsSuffix"
    color-scale-mode="@ColorScaleMode.ToAttributeValue()"
    @attributes="AdditionalAttributes"
    @onnimblewafermapdiehoverchange="(__value) => HandleDieHoverChange(__value)"
    @onnimblewafermapdrenderfinished="(__value) => HandleRenderFinished(__value)">
</nimble-wafer-map>