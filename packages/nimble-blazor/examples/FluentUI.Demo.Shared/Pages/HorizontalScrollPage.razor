@page "/HorizontalScrollPage"
<h1>Horizontal Scroll</h1>

<style>
    fluent-card {
        --card-width: 120px;
        --card-height: 200px;
        padding: 20px;
        margin: 12px;
        width: 120px;
        height: 200px
    }

    fluent-horizontal-scroll {
        max-width: 620px;
        margin: 20px
    }

    .right-gradient {
        --scroll-fade-next: var(--fill-color)
    }

    .both-gradient {
        --scroll-fade-next: var(--fill-color);
        --scroll-fade-previous: var(--fill-color)
    }

    .top-align {
        --scroll-align: flex-start
    }

    .bottom-align {
        --scroll-align: flex-end
    }

    .full-width, .full-width fluent-card {
        width: 600px;
        height: 300px
    }


    .class-override {
        height: 163px;
        width: 300px;
    }

    .state-override {
        --card-width: 350px;
        --card-height: 300px;
        --elevation: 6;
    }

    .state-override:hover {
        --elevation: 12;
    }

</style>

