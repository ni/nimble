{
  "name": "@ni/nimble-blazor",
  "version": "12.7.2",
  "description": "Blazor components for the NI Nimble Design System",
  "scripts": {
    "postinstall": "node build/generate-playwright-version-properties/source/index.js",
    "build": "wireit",
    "build:release": "wireit",
    "build:client": "wireit",
    "generate-icons": "wireit",
    "generate-hybrid": "wireit",
    "lint": "npm run lint:cs && npm run lint:js",
    "lint:cs": "dotnet format --verify-no-changes",
    "lint:js": "eslint .",
    "format": "npm run format:cs && npm run format:js",
    "format:cs": "dotnet format",
    "format:js": "eslint . --fix",
    "test": "dotnet test -c Release",
    "pack": "cross-env-shell dotnet pack NimbleBlazor -c Release -p:PackageVersion=$npm_package_version --output dist",
    "invoke-publish": "npm run invoke-publish:nuget && npm run invoke-publish:npm -- ",
    "invoke-publish:nuget": "cross-env-shell dotnet nuget push \"dist/*.nupkg\" -k $NUGET_SECRET_TOKEN -s \"https://api.nuget.org/v3/index.json\"",
    "invoke-publish:npm": "echo \"noop command to swallow npm args\"",
    "copy-resources": "node build/copyNimbleResources.js",
    "clear-cache": "rimraf .wireit/*/cache",
    "clear-wireit": "rimraf .wireit"
  },
  "wireit": {
    "build": {
      "dependencies": ["generate-hybrid", "build:release", "build:client"]
    },
    "build:release": {
      "command": "dotnet build -c Release /p:TreatWarningsAsErrors=true /warnaserror",
      "dependencies": ["generate-icons"],
      "files": [".eslintrc.js", "CodeAnalysisDictionary.xml", "NimbleBlazor.sln", "Examples", "NimbleBlazor", "Tests", "!**/{bin,obj}"]
    },
    "generate-hybrid": {
      "command": "rollup --bundleConfigAsCjs --config build/generate-hybrid/rollup.config.js",
      "files": ["build/generate-hybrid/rollup.config.js", "build/generate-hybrid/source/NimbleBlazor.HybridWorkaround.js"],
      "output": ["NimbleBlazor/wwwroot/NimbleBlazor.HybridWorkaround.js"]
    },
    "generate-icons": {
      "command": "node build/generate-icons/dist/index.js",
      "dependencies": ["generate-icons:bundle"],
      "files": ["build/generate-icons/dist/index.js"],
      "output": ["NimbleBlazor/Components/Icons"]
    },
    "generate-icons:bundle": {
      "command": "rollup --bundleConfigAsCjs --config build/generate-icons/rollup.config.js",
      "files": ["build/generate-icons/rollup.config.js", "build/generate-icons/source/index.js"],
      "output": ["build/generate-icons/dist/index.js"]
    },
    "build:client": {
      "command": "dotnet publish -p:BlazorEnableCompression=false -c Release Examples/Demo.Client --output dist/blazor-client-app",
      "dependencies": ["build:release"],
      "files": ["Examples/Demo.Client", "!Examples/Demo.Client/{bin,obj}"]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ni/nimble.git"
  },
  "author": {
    "name": "National Instruments"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ni/nimble/issues"
  },
  "homepage": "https://github.com/ni/nimble#readme",
  "files": [
    "!*"
  ],
  "devDependencies": {
    "@microsoft/fast-web-utilities": "^6.0.0",
    "@ni/eslint-config-javascript": "^4.2.0",
    "@ni/nimble-components": "*",
    "@ni/nimble-tokens": "*",
    "playwright": "1.36.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "cross-env": "^7.0.3",
    "glob": "^8.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^3.10.1",
    "wireit": "^0.14.1"
  }
}
