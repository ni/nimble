{
  "name": "@ni/nimble-blazor",
  "version": "1.0.3",
  "description": "Blazor components for the NI Nimble Design System",
  "scripts": {
    "build": "npm run build:all && npm run build:client",
    "build:all": "dotnet build -c Release /p:TreatWarningsAsErrors=true /warnaserror",
    "build:client": "dotnet publish -c Release Examples/NimbleBlazor.Demo.Client --output dist/blazor-client-app",
    "lint": "npm run lint:cs && npm run lint:js",
    "lint:cs": "dotnet format --verify-no-changes",
    "lint:js": "eslint .",
    "format": "npm run format:cs && npm run format:js",
    "format:cs": "dotnet format",
    "format:js": "eslint . --fix",
    "test": "dotnet test -c Release",
    "pack": "cross-env-shell dotnet pack NimbleBlazor.Components -c Release -p:PackageVersion=$npm_package_version --output dist",
    "copy-resources": "node build/copyNimbleResources.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ni/nimble.git"
  },
  "author": {
    "name": "National Instruments"
  },
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/ni/nimble/issues"
  },
  "homepage": "https://github.com/ni/nimble#readme",
  "files": [
    "!*"
  ],
  "devDependencies": {
    "@ni/eslint-config-javascript": "^3.1.0",
    "@ni/nimble-components": "*",
    "@ni/nimble-tokens": "*",
    "cross-env": "^7.0.3",
    "glob": "^7.2.0"
  }
}
