{
  "name": "@ni-private/blazor-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Workspace for Blazor projects",
  "scripts": {
    "build": "npm run build:release && npm run publish:client",
    "build:release": "dotnet build -c Release /p:TreatWarningsAsErrors=true /warnaserror",
    "publish:client": "dotnet publish --no-restore --no-build -p:BlazorEnableCompression=false -c Release Examples/Demo.Client --output dist/blazor-client-app",
    "lint": "npm run lint:cs && npm run lint:js",
    "lint:cs": "dotnet format --verify-no-changes",
    "lint:js": "eslint .",
    "format": "npm run format:cs && npm run format:js",
    "format:cs": "dotnet format",
    "format:js": "eslint . --fix",
    "test": "dotnet test -c Release",
    "pack": "npm run pack --workspace=NimbleBlazor --workspace=SprightBlazor",
    "invoke-publish": "npm run invoke-publish --workspaces --if-present"
  },
  "files": [
    "!*"
  ],
  "devDependencies": {
    "@ni/eslint-config-javascript": "^4.2.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "playwright": "1.42.0",
    "rollup": "^4.12.0"
  }
}
