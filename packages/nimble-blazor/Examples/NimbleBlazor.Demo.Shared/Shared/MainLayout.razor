@using Microsoft.AspNetCore.Components
@using NimbleBlazor.Components
@namespace NimbleBlazor.Demo.Shared
@inherits LayoutComponentBase

<PageTitle>ExampleClientApp-Blazor</PageTitle>

<NimbleThemeProvider Theme="_theme">
    <div class="root">
        <ExampleHeader @bind-Theme="_theme"></ExampleHeader>
        <ErrorBoundary @ref="ErrorBoundary">
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent Context="ex">
                    <p class="error">@ex.Message</p>
            </ErrorContent>
        </ErrorBoundary>
    </div>
</NimbleThemeProvider>
