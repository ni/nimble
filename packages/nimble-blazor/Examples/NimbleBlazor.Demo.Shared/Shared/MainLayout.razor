@using Microsoft.AspNetCore.Components
@using NimbleBlazor.Components
@namespace NimbleBlazor.Demo.Shared
@inherits LayoutComponentBase

<PageTitle>ExampleClientApp-Blazor</PageTitle>

<NimbleThemeProvider Theme="Theme">
    <div class="root">
        <ExampleHeader @bind-Theme="Theme"></ExampleHeader>
        <ErrorBoundary @ref="ErrorBoundary">
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent Context="ex">
                    <p class="error">@ex.Message</p>
            </ErrorContent>
        </ErrorBoundary>
    </div>
</NimbleThemeProvider>
