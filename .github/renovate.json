{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["npm"],
  "rangeStrategy": "update-lockfile",
  "schedule": [
    "monthly"
  ],
  "vulnerabilityAlerts": {
      "enabled": false
  },
  "packageRules": [
    {
      "groupName": "dependencies",
      "matchDepTypes": ["dependencies"]
    },
    {
      "groupName": "devDependencies",
      "matchDepTypes": ["devDependencies"]
    }
  ]
}
