{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["npm"],
  "rangeStrategy": "update-lockfile",
  "schedule": [
    "monthly"
  ],
  "vulnerabilityAlerts": {
      "enabled": false
  },
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "enabled": false
    },
    {
      "groupName": "beachball",
      "matchPackageNames": ["beachball"],
      "enabled": true
    },
    {
      "groupName": "D3",
      "matchPackagePatterns": ["^d3-", "^@types/d3-"],
      "enabled": true
    },
    {
      "groupName": "FAST",
      "matchPackagePatterns": ["^@microsoft/fast"],
      "enabled": true
    },
    {
      "groupName": "NI ESLint config",
      "matchPackagePatterns": ["^@ni/eslint-config"],
      "enabled": true
    },
    {
      "groupName": "Playwright",
      "matchPackagePatterns": ["playwright"],
      "enabled": true
    },
    {
      "groupName": "Rich Text",
      "matchPackagePatterns": ["^@tiptap/", "@types/markdown-it", "prosemirror-"],
      "enabled": true
    },
    {
      "groupName": "Storybook",
      "matchPackagePatterns": ["storybook"],
      "enabled": true
    },
    {
      "groupName": "TanStack",
      "matchPackagePatterns": ["^@tanstack/"],
      "enabled": true
    }
  ]
}
